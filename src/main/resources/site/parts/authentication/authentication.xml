<?xml version="1.0" encoding="UTF-8"?>
<part>
	<display-name>Authentication</display-name>
	<config>

		<field-set name="login">
			<label>Login</label>
			<items>
				<input name="loginText" type="TextLine">
					<label>Login link text</label>
					<help-text>What text should the login link have.</help-text>
					<occurrences minimum="1" maximum="1"/>
					<default>login</default>
				</input>

				<input name="loginRedirectUrl" type="TextLine">
					<label>Login redirect url</label>
					<help-text>Where to go after having logged in. For example /members</help-text>
					<occurrences minimum="1" maximum="1"/>
					<default>/</default>
				</input>
			</items>
		</field-set><!-- login -->

		<field-set name="logout">
			<label>Logout</label>
			<items>
				<input name="logoutPreText" type="TextLine">
					<label>Text preceding the logout link</label>
					<help-text>${user.profile.adfs.fullName} &lt;${adfs.userName}&gt; (</help-text>
					<occurrences minimum="1" maximum="1"/>
					<default>${user.displayName} (</default>
				</input>

				<input name="logoutText" type="TextLine">
					<label>Logout link text</label>
					<help-text></help-text>
					<occurrences minimum="1" maximum="1"/>
					<default>logout</default>
				</input>

				<input name="logoutPostText" type="TextLine">
					<label>Text after the logout link</label>
					<help-text>What text should the logout link have.</help-text>
					<occurrences minimum="1" maximum="1"/>
					<default>)</default>
				</input>

				<input name="logoutRedirectUrl" type="TextLine">
					<label>Logout redirect url</label>
					<help-text>Where to go after having logged out. Default is root /</help-text>
					<occurrences minimum="1" maximum="1"/>
					<default>/</default>
				</input>
			</items>
		</field-set><!-- logout -->

	</config>
</part>
